                android:layout_marginLeft="10dp">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Trên đường trở lại, đẩy gót chân xuống đất, co cơ đùi sau và cơ mông để đưa thân trở lại vị trí thẳng đứng"
                android:layout_marginLeft="10dp">

