                android:layout_height="200.0dp"
                android:src="@drawable/sing_leg_romanian_deadlift"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
